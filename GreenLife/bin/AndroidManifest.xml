<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.crane.application.greenlife"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="cn.crane.application.greenlife.App"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.crane.application.greenlife.ui.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 商铺列表 -->
        <activity
            android:name="cn.crane.application.greenlife.ui.merchant.MerchantListAtivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <!-- 产品列表 -->
        <activity
            android:name="cn.crane.application.greenlife.ui.merchant.FoodListActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <!-- 下单 -->
        <activity
            android:name="cn.crane.application.greenlife.ui.order.OrderConfirmActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <!-- 支付 -->
        <activity
            android:name="cn.crane.application.greenlife.ui.order.PayActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
